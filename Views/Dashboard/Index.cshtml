@model MarketPlaceViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">@ViewData["Title"]</h1>
            <p class="lead fw-normal text-white-50 mb-0">Connect with your inner agriculture</p>
        </div>
    </div>
</header>
<br />
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var farmer in Model.DisplayedFarmers)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <div class="card-body p-3">
                            <div class="text-center">
                                <!-- Farmer username -->
                                <h5 class="fw-bolder">@farmer.UserName</h5>
                                <!-- Farmer full name -->
                                <h5 class="fw-bolder">@farmer.FirstName @farmer.Surname</h5>
                            </div>
                            <!-- View farmer details -->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <a class="btn btn-outline-dark mt-auto" asp-action="FarmerDetails" asp-route-id="@farmer.Id">View Farmer Details</a>
                            </div>
                            </div>
                        </div>
                    </div>
            }
        </div>
    </div>
    <br />
</section>
