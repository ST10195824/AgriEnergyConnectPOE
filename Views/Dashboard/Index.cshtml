@model MarketPlaceViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}
<h1>@ViewData["Title"]</h1>
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">@ViewData["Title"]</h1>
            <p class="lead fw-normal text-white-50 mb-0">Connect with your inner agriculture idk</p>
        </div>
    </div>
</header>
<br />
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var farmer in Model.DisplayedFarmers)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Farmer username -->
                                <h5 class="fw-bolder">@farmer.UserName</h5>
                                <!-- Farmer full name -->
                                <h5 class="fw-bolder">@farmer.FirstName @farmer.Surname</h5>
                            </div>
                            <!-- Farmer actions -->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto">Do something</a></div>
                            </div>
                            <!-- View farmer details -->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" >View</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
    
</section>
<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">Related products</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var product in Model.DisplayedProducts)
            {
                <div class="card h-100">
                    <!-- Product image-->
                    <img class="card-img-top" src="@product.ImagePath" />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">@product.ProductName</h5>
                            <!-- Product price-->
                            R @product.ProductPrice
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto">does something</a></div>
                        </div>
                        @if (User.IsInRole("Employee"))
                        {
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto">View</a></div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</section>
