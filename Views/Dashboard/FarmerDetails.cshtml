@model FarmerCreationViewModel

@{
    ViewData["Title"] = "Farmer Details";
}
<style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        .container {
            padding-top: 50px;
        }

        .card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .card-body {
            padding: 20px;
        }

        .text-center {
            text-align: center;
        }

        .card h5 {
            margin: 10px 0;
            color: #333;
        }

        .card .email {
            margin-top: 15px;
            font-weight: bold;
            color: #555;
        }
   </style>
   <header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">@Model.Email</h1>
                   <h4 class="display-6 fw-bolder"> @Model.FirstName @Model.Surname </h4>
        </div>
    </div>
</header>



<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">Farmers Products:</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var product in Model.FarmersProducts)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="@product.ImagePath" />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@product.ProductName</h5>
                                <!-- Product price-->
                                R @product.ProductPrice
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a class="btn btn-outline-dark mt-auto" asp-controller="MarketPlace"  asp-action="IndividualItem" asp-route-id="@product.ProductId">View</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
